<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.idreams.practice.ActionBarTab.SchoolOverviewFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <fragment
                android:id="@+id/intofragment"
                class="com.example.idreams.practice.ActionBarTab.SchoolOverviewIntroFragment"
                android:layout_width="match_parent"
                android:layout_height="500px"/>
            <fragment
                android:id="@+id/feefragment"
                class="com.example.idreams.practice.ActionBarTab.SchoolOverviewFeeFragment"
                android:layout_width="match_parent"
                android:layout_height="500px"
                />
            <TextView
                android:id="@+id/text_school_overview_fragment"
                android:layout_width="match_parent"
                android:layout_height="500px"
                android:text="TEST TEST TEST"
                android:textColor="#FFFFFF"
                android:textSize="25dp"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
